<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCitas.MainPage"
             Title="App CITAS">
    
    <VerticalStackLayout 
        Padding="20" Spacing="20">
        
        <Picker x:Name="TipoDocumentoPicker"
                Title="Seleccione su tipo de documento"/>
       
        <Entry x:Name="Usuarios"
               Placeholder="Usuario" />
        
        <Entry x:Name="Contraseña"
               Placeholder="Contraseña" 
               IsPassword="True" />
        
        <Button Text="Iniciar sesión" 
                Clicked="OnIniciarSesionClicked" 
                BackgroundColor="Purple" 
                TextColor="White"/>
        
        <Label Text="¿Has olvidado tu contraseña?" HorizontalOptions="Center"/>
        
    </VerticalStackLayout>
</ContentPage>